<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_balance_view_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="@dimen/block_margin_horizontal"
    android:layout_marginRight="@dimen/block_margin_horizontal"
    android:layout_marginTop="@dimen/block_margin_vertical"
    android:layout_marginBottom="@dimen/block_margin_vertical"
    android:paddingBottom="@dimen/block_padding_vertical"
    android:paddingTop="@dimen/block_padding_vertical"
    android:elevation="@dimen/block_elevation"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/main_balance_view_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/block_title_padding_vertical"
        android:paddingBottom="@dimen/block_title_padding_vertical"
        android:gravity="center"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold"
        android:text="@string/balance"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_separator" />
    <TextView
        android:id="@+id/main_balance_view_value_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/block_title_padding_vertical"
        android:paddingBottom="@dimen/block_title_padding_vertical"
        android:gravity="center"
        android:textSize="@dimen/text_title_size"
        android:text="@string/balance"/>
</LinearLayout>
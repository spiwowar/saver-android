<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- TITLE -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/add_target"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_separator"
        android:layout_below="@id/title"/>

    <!-- MAIN PART -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_below="@id/title">

        <!-- TARGET NAME -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/target_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="@string/target"/>
            <EditText
                android:id="@+id/target_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_toEndOf="@id/target_name_TV"
                android:hint="@string/name"
                android:textSize="20dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/target_value"/>
        </RelativeLayout>

        <!-- TARGET VALUE -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/target_value_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="@string/how_much"/>
            <EditText
                android:id="@+id/target_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_toEndOf="@id/target_value_TV"
                android:hint="@string/add"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:nextFocusDown="@+id/year"/>
        </RelativeLayout>

        <!-- TARGET DATE -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/target_date_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="@string/till_when"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toEndOf="@id/target_date_TV">
                <LinearLayout
                    android:id="@+id/date_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="10dp">
                    <com.berlejbej.saver.blocks.utils.dialogs.DateValuesEditText
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:text="1991"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:nextFocusDown="@+id/month"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="-"/>
                    <com.berlejbej.saver.blocks.utils.dialogs.DateValuesEditText
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:text="08"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:nextFocusDown="@+id/day"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:text="-"/>
                    <com.berlejbej.saver.blocks.utils.dialogs.DateValuesEditText
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:text="22"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:imeOptions="actionDone"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center">
                    <ImageButton
                        android:id="@+id/calendar_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/calendar"/>
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="@string/add"
                android:textAllCaps="false"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
